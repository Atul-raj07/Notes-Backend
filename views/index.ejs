<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>index page</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen w-full bg-red-300 p-10">
    <form action="/create" method="post">
        <input class="w-full bg-red-400 text-xl font-bold text-white h-16 mt-2 p-2 rounded-2xl outline-none" type="text" placeholder="head" name="head">
        <input class="w-full  h-28 bg-red-400 text-xl font-bold text-white  mt-2 p-2 rounded-2xl outline-none" type="text" placeholder="description" name="desc">
        <input type="submit" class="p-4 mt-4 bg-red-500 px-8 rounded-xl text-white font-bold">
    </form>
    <div class="mt-10 flex flex-wrap text-white gap-5">
        <% if (formdets.length > 0) { %>
            <% formdets.forEach(function(file) { %>
                <div class="min-h-40 w-56 p-5 rounded-md  text-wrap bg-red-400">
                    <h1 class="text-2xl font-semibold text-wrap"><%= file.head %></h1>
                    <p><%= file.desc %></p>
                    <a class="text-blue-700 font-semibold mt-6 block" href="#">readmore</a>
                </div>
            <% }); %>
        <% } else { %>
            <p class="">no task yet</p>
        <% } %>
        
    </div>
</body>
</html>