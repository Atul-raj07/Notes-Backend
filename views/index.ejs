<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>index page</title>
    <link
    href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css"
    rel="stylesheet"
/>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="min-h-screen w-full bg-red-300 p-10">
    <form action="/create" method="post">
        <input class="w-full bg-red-400 text-xl font-bold text-white h-16 mt-2 p-2 rounded-2xl outline-none" type="text" placeholder="head" name="head">
        <input class="w-full  h-28 bg-red-400 text-xl font-bold text-white  mt-2 p-2 rounded-2xl outline-none" type="text" placeholder="description" name="desc">
        <input type="submit" class="p-4 mt-4 bg-red-500 px-8 rounded-xl text-white font-bold">
    </form>
    <div class="mt-10 flex flex-wrap text-white gap-5">
        <% if (formdets.length > 0) { %>
            <% formdets.forEach(function(file) { %>
                <div class="min-h-40 w-56 p-5 rounded-md overflow-wrap flex flex-col justify-between  bg-red-400">
                    <div>
                        <% if(file.head.length > 7) {%>
                            <h1 class="text-2xl font-semibold mb-1 "> <%= file.head.substring(0,8)+'.....' %></h1>
                            <% } else {%>
                                <h1 class="text-2xl font-semibold mb-1 "> <%= file.head %></h1>
                            <% } %>
                        <% if(file.desc.length > 20) {%>
                            <p> <%= file.desc.substring(0,20)+'.....' %></p>
                            <% } else {%>
                                <p> <%= file.desc %></p>
                            <% } %>
                        </div>
                  <div class="flex justify-between mt-2 items-center">
                      <a class="text-blue-700 font-semibold  block" href="/read/<%= file.head %>" >readmore</a>
                      <a class="text-zinc-400 font-semibold  block" href="/update/<%= file.head %>" >edit</a>

                    <a class="text-2xl text-red-600" href="/delete/<%= file.head %>"><i class="ri-delete-bin-5-fill"></i></a>
                </div></div>
            <% }); %>
        <% } else { %>
            <p class="">no task yet</p>
        <% } %>
        
    </div>
</body>
</html>